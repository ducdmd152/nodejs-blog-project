<h1>HOME PAGE</h1>

<div class="mt-4">
    <div class="row">
        {{#each blogs}}
        <div class="col col-sm-6 col-lg-4 mb-4">

            <div class="card">
                <a href="/blogs/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="...">
                </a>
                <a href="/blogs/{{this.slug}}">
                    <h2 class="m-2">{{this.title}}</h2>
                </a>
                <div class="card-body">
                    <p class="card-text">{{this.desc}}</p>
                </div>
                <a href="/blogs/{{this.slug}}">
                    <div align="right" class="m-4">
                        <button type="button" class="btn btn-primary">Read</button>
                    </div>
                </a>

            </div>

        </div>
        {{/each}}
    </div>
</div>