<h2 class="mt-4">Update blog</h2>

<form action="/blog/update" method="POST" class="mb-4">

    <input name="_id" type="hidden" value="{{blog._id}}" class="form-control" id="exampleInputEmail1"
        aria-describedby="emailHelp">
    <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input name="title" type="text" value="{{blog.title}}" class="form-control" id="exampleInputEmail1"
            aria-describedby="emailHelp">
    </div>

    <div class="form-group mt-2">
        <label for="exampleInputEmail1">Description</label>
        <input name="desc" type="text" value="{{blog.desc}}" class="form-control" id="exampleInputEmail1"
            aria-describedby="emailHelp">
    </div>

    <div class="form-group mt-2">
        <label for="exampleInputEmail1">Image URL</label>
        <input name="image" value="{{blog.image}}" type="text" class="form-control" id="exampleInputEmail1"
            aria-describedby="emailHelp">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>